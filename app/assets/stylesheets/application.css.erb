div {
  box-sizing: border-box;
}

.first-view {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.first-view-image {
  background-image: url(<%= asset_path 'cooking3.jpg' %>);
  height: 100%;
  background-size: cover;
  background-position: center;
}

.first-view-inner {
  position: absolute;
  width: 100%;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.first-view-text {
  display: flex;
  writing-mode: vertical-lr;
  flex-wrap: wrap-reverse;
  padding: 6rem;
  margin-left: 3rem;
}

.first-view-title {
  font-family: 'Noto Serif JP', serif;
  color: black;
  height: 100%;
  font-size: 2rem;
}

.first-view-title:first-child {
  margin-left: 3rem;
}

.text_photo2 {
  order: 2;
}

.shaded-glass {
  height: 100%;
  width: 100%;
  background-image: url('cooking2.jpg');
}

.time-wrapper {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.favorite-btn {
  padding: 1rem;
  background-color: chartreuse;
  color: black;
}

.favorite-btn:hover {
  background-color: white;
  color: red;
}

.favorite-btn a {
  text-decoration: none;
  color: inherit;
}

.item-img-content {
  text-align: center;
  background-color: gray;
  line-height: 0;
}

.item-info {
  padding: 1vh 0;
}

table.recruitment-table {
  width: 100%;
  margin: 0;
}

table.recruitment-table tr {
  border-bottom: 1px dashed gray;
}

table.recruitment-table tr:last-child {
  border: none;
}

table.recruitment-table th {
  width: 5rem;
}
